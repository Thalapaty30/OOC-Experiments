#include <iostream>
using namespace std;

// Base class
class Product {
protected:
    string name;
    double price;

public:
    // Constructor
    Product(string n, double p) {
        name = n;
        price = p;
        cout << "Product created: " << name << endl;
    }

    // Function (method) - can be overridden
    virtual double getPrice() {
        return price;
    }

    // Destructor
    ~Product() {
        cout << "Product removed: " << name << endl;
    }
};

// Derived class - overriding getPrice()
class DiscountProduct : public Product {
    double discountPercent;
public:
    DiscountProduct(string n, double p, double d)
        : Product(n, p), discountPercent(d) {}

    // Overriding function
    double getPrice() override {
        return price - (price * discountPercent / 100);
    }
};

// Function Overloading
double calculateBill(double price) {
    return price;
}

double calculateBill(double price, int qty) {
    return price * qty;
}

int main() {
    // Object creation
    Product p("USB Cable", 200);
    DiscountProduct dp("Bluetooth Speaker", 1500, 10);  // 10% discount

    cout << "\n--- Bill Details ---\n";

    double normalPrice = calculateBill(p.getPrice());
    cout << "USB Cable: Rs." << normalPrice << endl;

    double discountedPrice = calculateBill(dp.getPrice(), 2); // buying 2
    cout << "Bluetooth Speaker (2 pcs with discount): Rs." 
         << discountedPrice << endl;

    cout << "\nThank you for shopping!" << endl;
    return 0;
}




